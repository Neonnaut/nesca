@top Program { expression* }

@skip { space | LineComment }

expression {
  Operator |
  Directive |
  DirectiveKeyword |
  Filter |
  RegExp
}

//kw<word> { @specialize[@name={word}]<name, word> }

@external tokens newlines from "./tokens" { newline, blankLineStart, newlineBracketed, eof }


@tokens {
  space { $[ \t\n\r]+ }
  lineComment { "#" }
  name { "name: "}
  
  directive { newline ("with" |"letters" | "random-rate" | "words" | "categories") ": " }
  directiveOperator { ":" }
  directiveKeyword { ("std-ipa-features" | "std-assimilations" | "coronal-metathesis") $[ \n]}
  
  filter { ("filter" | "reject") ": " | "% "}
  filterOperator { ">" | ";" }
  regExp { "+"|"*"|"?"|"^"|"$"|"|"|"\\"|"["|"]"|"{"|"}"|"("|")" }

  weight {":"(@digit ("_" | @digit)* ("." ("_" | @digit)*)? | "." @digit ("_" | @digit)*) }
  
  phoneClassOperator { "=" }

  LineComment { lineComment ![\n]* }


  Directive { directive }

  DirectiveKeyword { directiveKeyword }

  Filter { filter }

  Operator { directiveOperator | filterOperator | phoneClassOperator | weight}

  RegExp { regExp }

  @precedence {
    Filter,
    Name,
    Directive,
    DirectiveKeyword,
    RegExp,
    Operator,
    space,
    LineComment
  }
}