@top Program {
    (Statement LineBreak)*
  }

  expression {
    Operator |
    Directive |
    DirectiveKeyword |
    Filter |
    RegExp
  }
  
  @tokens {
    Operator = "Trigger"
    Keyword1 = "keyword1"
    Keyword2 = "keyword2"
    LineBreak { @regexp { "\n" } }
    Space { @regexp { "\s" } }
  }
  
  Statement {
    TriggeredLine | OtherLine
  }
  
  TriggeredLine {
    Trigger Space Keyword+
  }
  
  OtherLine {
    @extend { Token+ }
  }
  
  Keyword {
    Keyword1 | Keyword2
  }
  